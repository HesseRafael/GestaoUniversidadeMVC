@model List<AlunoModel>
@{
    ViewData["Title"] = "Listagem de Alunos";
}

<div class="text-center">
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a role="button" class="btn btn-outline-success" asp-controller="Aluno" asp-action="Adicionar">Adicionar novo Aluno</a>
    </div>
    <br />
    <h1 class="display-4">Listagem de Alunos</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">E-Mail</th>
                <th scope="col">Idade</th>
                <th scope="col">Ação</th>
            </tr>
        </thead>
        <tbody class="table-group-divider">
            @if(Model != null && Model.Any()){
                foreach (AlunoModel aluno in Model)
                {
                    <tr>
                        <th scope="row">@aluno.Id</th>
                        <td>@aluno.Nome</td>
                        <td>@aluno.Email</td>
                        <td>@aluno.Idade</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Acoes">
                                <a role="button" class="btn btn-outline-primary" asp-route-id="@aluno.Id" asp-controller="Aluno" asp-action="Alterar">Alterar</a>
                                <a role="button" class="btn btn-outline-danger" asp-route-id="@aluno.Id"  asp-controller="Aluno" asp-action="Excluir">Excluir</a>
                            </div>
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>
</div>
